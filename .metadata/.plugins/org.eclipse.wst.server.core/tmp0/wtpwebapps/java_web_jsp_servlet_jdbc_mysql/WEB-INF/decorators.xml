<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<decorators defaultdir="/decorators" >
	<excludes>
		<pattern>/api*</pattern>
	</excludes>
	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<decorator name="login" page="login.jsp">
		<pattern>/dang-nhap</pattern>
	</decorator>
	
	<decorator name="register" page="register.jsp">
		<pattern>/dang-ki</pattern>
	</decorator>
	
	<decorator name="group" page="group.jsp">
		<pattern>/group</pattern>
	</decorator>
</decorators>